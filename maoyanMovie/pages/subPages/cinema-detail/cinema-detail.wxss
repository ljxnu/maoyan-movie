@import '/templates/cinemaMap/cinemaMap.wxss';
.movie-info{
  padding: 22rpx 30rpx;
  text-align: center;
  border-bottom: 1px solid #e6e6e6;
}
.grade{
  color: #ffb400;
  margin-left: 10rpx;
}
.small{
  font-size: 20rpx;
}
.movie-desc{
  font-size: 26rpx;
  color: #999999;
  height: 37rpx;
  line-height: 37rpx;
  margin-top: 10rpx;
}
.item{
  display: flex;
  height: 84rpx;
  padding: 30rpx 30rpx;
  border-bottom: 1px solid #e6e6e6;
}
.box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: column;
  margin: 0 20rpx;
  width: 130rpx;
}

.begin{
  font-size: 40rpx;
  color: #333333;
}
.end{
  font-size: 22rpx;
  color: #999999;
}
.lan{
  font-size: 26rpx;
  color: #333333;
  margin-top: 10rpx;
}
.hall{
  font-size: 22rpx;
  color: #999999;
  margin-top: 6rpx;
  overflow: hidden;
  height: 30rpx;
}
.price{
  
  font-size: 38rpx;
  color: #f03d37;
}
.button{
  border: 1px solid #f03d37;
  background-color: #f03d37;
  width: 80rpx;
  height: 50rpx;
  font-size: 25rpx;
  color: #e6e6e6;
  line-height: 50rpx;
  text-align: center;
  border-radius: 6px;
  
}





