.container{
  position: relative;
  width: 100vw;
  min-height: 100vh;
  background: #f5f5f5;
  color: #666666;
}
.section{
  margin-bottom: 20rpx;
  font-size: 28rpx;
  padding: 30rpx;
  background: #fff;
}
.section-title{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
  font-size: 32rpx;
  line-height: 1em;
}
.section-content{
  color: #999999;
  font-size: 28rpx;
  padding-top: 20rpx;
  line-height: 1.8em;
}
.movie-box{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
  font-size: 30rpx;
  line-height: 1.5em;
}
.movie-name{
  color: #333333;
  font-size: 36rpx;
}
.watch-time{
  color: #f03d37;
}
.price-box{
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
  padding-right: 30rpx;
}
.server{
  font-size: 26rpx;
  color: #999999;
}
.price-num{
  color: #f03d37;
  font-size: 30rpx;
}
.yuan{
  font-size: 20rpx;
}
.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  border-top: 1px solid #f0f0f0;
}
.payment{
  padding: 20rpx 30rpx;
  text-align: right;
  font-size: 32rpx;
}
.payment-btn{
  height: 2.5em;
  line-height: 2.5em;
  background: #ff9900;
  margin: 0 30rpx 20rpx;
  color: #fff;
  text-align: center;
  font-size: 34rpx;
  border-radius: 8rpx;
}